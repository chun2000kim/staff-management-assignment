@model StaffManagement.MVC.Models.StaffViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-danger">
    <p>Are you sure you want to delete this staff?</p>
</div>

<div class="card p-4 shadow-lg">
    
    <dl class="row">
        <dt class="col-sm-3">Staff ID</dt>
        <dd class="col-sm-9">@Model.StaffId</dd>

        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Birthday</dt>
        <dd class="col-sm-9">@Model.Birthday.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Gender</dt>
        <dd class="col-sm-9">@((Model.Gender == 1) ? "Male" : "Female")</dd>
    </dl>
    <hr/>
    <form asp-action="DeleteConfirmed" method="post" class="mt-3">
        <input type="hidden" asp-for="StaffId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
@model StaffManagement.MVC.Models.StaffViewModel
@{
    ViewData["Title"] = "Create";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="card shadow-lg border-0 rounded-3" style="width: 700px; margin:auto;">
    
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5>Add New Staff</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" class="card p-4 shadow-sm">
            <div class="mb-2">
                <label asp-for="StaffId" class="form-label">Staff Id</label>
                <input asp-for="StaffId" class="form-control" maxlength="8" />
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" maxlength="100" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Birthday" class="form-label"></label>
                <input asp-for="Birthday" class="form-control" type="date" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-select">
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-start gap-2 mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>



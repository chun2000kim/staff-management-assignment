@model IEnumerable<StaffManagement.MVC.Models.StaffViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-lg border-0 rounded-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-3" style="margin:auto;">Staff List</h2>
       
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="card p-2 mb-4">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Staff ID</label>
                    <input type="text" name="staffId" class="form-control form-control-sm" placeholder="Enter Staff ID" value="@Context.Request.Query["staffId"]" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Gender</label>
                        <select name="gender" class="form-select form-select-sm">
                         <option value="">-- All --</option>
                        <option value="1" selected="@(Context.Request.Query["gender"] == "1")">Male</option>
                        <option value="2" selected="@(Context.Request.Query["gender"] == "2")">Female</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Birthday From</label>
                    <input type="date" name="birthdayFrom" class="form-control form-control-sm" value="@Context.Request.Query["birthdayFrom"]" placeholder="dd-mm-yyyy" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Birthday To</label>
                    <input type="date" id="dateto" name="birthdayTo" class="form-control form-control-sm" value="@Context.Request.Query["birthdayTo"]" placeholder="dd-mm-yyyy" />
                </div>
        </div>
        <div class="mt-3">
                <a asp-action="Create" class="btn btn-primary btn-sm">Add Staff</a>
            <button type="submit" class="btn btn-primary btn-sm">Search</button>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Reset</a>
            <a asp-action="ExportExcel" class="btn btn-success btn-sm">Export to Excel</a>
            <a asp-action="ExportPdf" class="btn btn-danger btn-sm">Export to PDF</a>
        </div>
    </form>
        <table class="table table-striped table-bordered table-hover mb-0">
            <thead class="table-primary">
                <tr>
                    <th>Staff ID</th>
                    <th>Full Name</th>
                    <th>Birthday</th>
                    <th>Gender</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StaffId</td>
                        <td>@item.FullName</td>
                        <td>@item.Birthday.ToString("yyyy-MM-dd")</td>
                        <td>@(item.Gender == 1 ? "Male" : "Female")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.StaffId" class="btn btn-primary btn-sm">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.StaffId" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>